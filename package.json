    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^4.5.0",
    "png2icons": "^2.0.1",
    "prettier": "^2.1.2",
    "source-map-support": "^0.5.19",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.5",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^5.2.0",
    "webpack-node-externals": "^2.5.2"
  }
