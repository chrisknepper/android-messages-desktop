    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^4.3.0",
    "png2icons": "^2.0.1",
    "prettier": "^2.0.5",
    "source-map-support": "^0.5.19",
    "style-loader": "^1.2.1",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.6.0"
