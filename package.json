    "fs-jetpack": "^2.4.0",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@types/dom-to-image": "^2.6.1",
    "@types/electron-settings": "^3.1.1",
    "@types/friendly-errors-webpack-plugin": "^0.1.2",
    "@types/node": "12",
    "@types/node-fetch": "^2.5.7",
    "@types/webpack": "^4.41.17",
    "@types/webpack-merge": "^4.1.5",
    "@types/webpack-node-externals": "^1.7.1",
